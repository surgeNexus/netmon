<%- include('../partials/header') %>

<div class="container">
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
              <label class="form-check-label" for="flexSwitchCheckChecked">Dark Mode</label>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <div class="card card-body" style="width: 18rem;">
                    <form action="/settings" method="POST">
                      <div class="text-center">
                        <h3>New Block</h3>
                        <div>
                            <label for="">Block Name</label>
                            <div>
                                <input type="text" name="name" value="" required>
                            </div>
                        </div>
                        <div>
                            <br>
                            <button class="btn btn-small btn-primary" type="submit">Add Block</button>
                        </div>
                      </div>
                    </form>
                </div>
                <div class="card card-body" style="width: 18rem;">
                    <form action="/settings/" method="POST">
                      <div class="text-center">
                        <h3>Alerts</h3>
                        <div>
                            <label for="">Email Address</label>
                            <div>
                                <input type="text" name="email" value="">
                            </div>
                        </div>
                        <div>
                            <br>
                            <button class="btn btn-small btn-primary" type="submit">Save</button>
                        </div>
                      </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% blocks.forEach((block) => { %>
    <div class="row">
        <div class="col">
            <br>
            <div class="card">
                <div class="card-header text-center">
                  <%= block.name %>
                  <form action="/settings/<%= block.id %>/block?_method=DELETE" method="POST">
                    <button type="submit" class="no-button">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                      </svg>
                    </button>
                  </form>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                          
                        <tr>
                          <th scope="col">Resource Name</th>
                          <th scope="col">IP Address</th>
                          <th scope="col">Remove</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <form action="/settings/<%= block.id %>" method="POST">
                            <th>
                              <input type="text" name="name" value="">
                            </th>
                            <th>
                              <input type="text" name="ip" value="">
                            </th>
                            <th class="">
                              <button class="btn btn-small btn-primary" type="submit">Submit</button>
                            </th>
                          </form>
                        </tr>
                        <% block.servers.forEach((server) => { %>
                            <tr>
                              <td><%= server.name %></td>
                              <td><%= server.ip %></td>
                              <td>
                                <form action="/settings/<%= server.id %>?_method=DELETE" method="POST">
                                  <button type="submit" class="no-button">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                      <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                    </svg>
                                  </button>
                                </form>
                              </td>
                            </tr>
                        <% }) %>
                      </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>

<%- include('../partials/header') %>